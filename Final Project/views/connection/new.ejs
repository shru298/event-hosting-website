<%- include('../partials/header.ejs')%>
<div class="createEvent">
         <h3 class="alignment"> Create a New Event </h3>
        
    <form action="/connections" method = 'POST'>

	    <label for="category">Category</label>
	    <input type="text" id="category" name="category" required>
	    <br/>
	    <label for="title">Title</label>
	    <input type="text" id="title" name="title" required >
		
		<label for="sub_title">Sub-Title</label>
		<input type="text" id="sub_title" name="sub_title" required>
		  
		<label for="details" >Details</label>
		<input type="text" id="details" name="details" minlength="10" required>

	
		<label for="location">Location</label>
		<input type="text" id="location" name="location" placeholder="Event Location" required>
	    <br/><br/>

		<label for="start_date">Event Start date </label>
		<input type="date" id="start_date" name="start_date" required> 
		
		<label for="end_date">Event End date </label>	
		<input type="date" id="end_date" name="end_date" required>
		<br/><br/>
		
		<label for="start_time">Event Start Time </label>
		<input type="time" id="start_time" name="start_time" required>

	
		<label for="end_time">Event End Time </label> 
		<input type="time" id="end_time" name="end_time" required> 
		<br/><br/>
	
		<label for="image">Image</label>
		<input type="text" id="image" name="image" placeholder="Image URL" required>
		<br/><br/>
		
		<br/><br/>
		<input type="submit" value="Submit"> <input type="reset">
	
		</form>
	
</div>
<%- include('../partials/footer.ejs')%>